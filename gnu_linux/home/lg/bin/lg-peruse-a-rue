. /home/lg/etc/shell.conf

[ -z "${LG_FRAMES}" ] && echo "LG_FRAMES is empty" && exit 1

if [ $# -ne 3 ] ; then
        echo "USAGE: $0 [Peruse Server IP] [Port] [Panoid]"
        exit 2
fi

peruse_ip=$1
port=$2
panoid=$3

lg-ctl-master

#GEScriptPID=$(pgrep run-earth-bin)
#ssh -tt -x lg@lg1 "killall -q node; liquid-galaxy.lg-peruse-a-rue/bin/peruse-a-rue" &
#lg-run "killall -q run-earth-bin.sh; killall -q chromium-browser; killall -q googleearth-bin"
lg-run "killall -q chromium-browser"

for lg in $LG_FRAMES ; do
	frame=$(($(echo $lg | cut -c 3)-1))

	if [[ ${frame} -gt $(( ${LG_FRAMES_MAX}/2 )) ]] ; then
	    frame="$(( ${frame} - ${LG_FRAMES_MAX} ))"
	fi

	if [[ $frame -eq 0 ]]
	then
		export DISPLAY=:0 && chromium-browser --incognito --noerrdialogs --disable-session-crashed-bubble --disable-infobars --kiosk "http://$peruse_ip:$port/display/?master=true&pano=$panoid" &
	else
		ssh -x lg@$lg "export DISPLAY=:0 && chromium-browser --incognito --noerrdialogs --disable-session-crashed-bubble --disable-infobars --kiosk 'http://$peruse_ip:$port/display/?yawoffset=$frame'" &
	fi
done

exit 0
